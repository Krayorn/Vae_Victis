{% extends 'layout.html.twig' %}

{% block content %}

    <div class="align">
        <div class="infoUser" id="usernameRecap"> Username : {{ username }}</div> <img id="parameterUsername" class="parameter" src="assets/images/parametre.png">
        <div id="infoUsername">
            <form action="?action=profileEditing" method="POST" name="usernameForm" id="usernameForm">
                <input type="text" name="usernameEditing" id="usernameEditing"><br>  <span id="errorUsername" class="errorBlock"></span><br>
                <input type="submit" value="valider">
            </form>
        </div>
    </div>
    <div class="align">
        <div class="infoUser" id="emailRecap"> Email: {{ email }}</div><img id="parameterEmail" class="parameter" src="assets/images/parametre.png">
        <div id="infoEmail">
            <form action="?action=profileEditing" method="POST" name="emailForm" id="emailForm">
                <input type="text" name="emailEditing" id="emailEditing"><br><span id="errorEmail" class="errorBlock"></span><br>
                <input type="submit" value="valider">
            </form>
        </div>
    </div>

    <div class="align">
        <div class="infoUser" id="factionRecap"> Faction : {{ faction }}</div><img class="parameter" id="parameterFaction" src="assets/images/parametre.png">
