            <form action="?action=profileEditing" method="POST" name="factionForm" id="factionForm">
                Choix 1 : <select name="factionEditing" id="factionEditing" >
                    <option  value="vikings">Vikings</option>
                    <option  value="samurai">Samurai</option>
                    <option  value="chevaliers">Chevaliers</option>
                    <option value="neutre">Neutre</option>
                </select>
                <input type="submit" value="valider">
            </form>
        </div>
    </div>

    <div class="align">
        <div class="infoUser" id="firstnameRecap"> Pr√©nom: {{ firstname }}</div> <img id="parameterFirstname" class="parameter" src="assets/images/parametre.png">
        <div id="infoFirstname">
            <form action="?action=profileEditing" method="POST" name="firstnameForm" id="firstnameForm">
                <input type="text" name="firstnameEditing" id="firstnameEditing"><br>  <span id="errorFirstnameEditing" class="errorBlock"></span><br>
                <input type="submit" value="valider">
            </form>
        </div>
    </div>

    <div class="align">
        <div class="infoUser" id="lastnameRecap"> Nom: {{ lastname }}</div><img class="parameter" id="parameterLastname" src="assets/images/parametre.png">
        <div id="infoLastname">
            <form action="?action=profileEditing" method="POST" name="lastnameForm" id="lastnameForm">
                <input type="text" name="lastnameEditing" id="lastnameEditing"><br>  <span id="errorLastname" class="errorBlock"></span><br>
                <input type="submit" value="valider">
            </form>
        </div>
        <a href="?action=profile&amp;username={{username}}"> Profil</a>
    </div>

{% endblock %}