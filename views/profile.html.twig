{% extends 'layout.html.twig' %}

{% block content %}
    <h1>User :  {{ username }} !</h1>
    <div id="form">
        <span id="errorFields" class="errorBlock"></span>
        <form action="?action=profile&amp;username={{username}}" method="POST" id="articlesForm">
            Title : <input type="text" name="title" id="title"><br>  <span id="errorTitle" class="errorBlock"></span>
            Description: <textarea name="description" id="description"></textarea><br>  <span id="errorDescription" class="errorBlock"></span>
            Contenu:     <textarea name="content" id="content"></textarea><br>  <span id="errorContent" class="errorBlock"></span>
                <h1>Tags faction</h1>


            <input type="checkbox" name="tags" value="vikings"> vikings
            <input type="checkbox" name="tags" value="samurai">samurai
            <input type="checkbox" name="tags" value="chevaliers">chevaliers
            <input type="checkbox" name="tags" value="neutral"> neutre
            <h1> Other tags</h1>
            <input type="checkbox" name="tags" value="items">Equipement
            <input type="checkbox" name="tags" value="strat"> Stratégie
            <input type="checkbox" name="tags" value="fight"> Combat<br>
